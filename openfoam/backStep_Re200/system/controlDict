FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      controlDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

application     icoFoam;
startFrom       startTime;
startTime       0;
stopAt          endTime;
endTime         60;  // Run until flow is developed
deltaT          0.01;  // Initial time step
writeControl    timeStep;
writeInterval   1000;  
purgeWrite      0;
writeFormat     ascii;
writePrecision  6;
writeCompression off;
timeFormat      general;
timePrecision   6;
runTimeModifiable true;

// Adjust time step to maintain stability
adjustTimeStep  yes;
maxCo           0.5;  // Maximum Courant number


// ************************************************************************* // 